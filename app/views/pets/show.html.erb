<header class="banner">
	<h1><%= @pet.name %>'s Profile</h1>
</header>
<br>

<%= image_tag @pet.pet_avatar_url(:display) %>
<div class="fontweightone petshowtext">
  <p>Name: <%= @pet.name %></p>
  <p>Breed: <%= @pet.breed %></p>
  <p>Weight: <%= @pet.weight %>lbs.</p>
  <hr>
  <% if current_user.id == @pet.user_id %>
    <p><%= link_to "ADD A PET", new_user_pet_path(@user), class: "btn btn-info"  %></p>
    <p><%= link_to "EDIT PET", edit_user_pet_path(@user, @pet), class: "btn btn-info"  %></p>
    <p><%= link_to "DELETE PET", user_pet_path(@user, @pet), method: :delete, class: "btn btn-info"  %></p>
    <p><%= link_to "UPLOAD PICTURE", new_pet_picture_path(@pet), class: "btn btn-info"  %></p>
    <p><%= link_to "#{@pet.name}'PICTURES ", pet_pictures_path(@pet), class: "btn btn-info" %></p>
    <p><%= link_to "ALL #{@user.first_name}'s PETS", user_pets_path(@user), class: "btn btn-info"  %></p>
  <% else %>
    <p><%= link_to "#{@pet.name}'s PICTURES", pet_pictures_path(@pet), class: "btn btn-info"  %></p>
    <p><%= link_to "ALL #{@user.first_name}'s PETS", user_pets_path(@user), class: "btn btn-info"  %></p>
  <% end %>
</div>
