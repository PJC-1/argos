<h1>All Pets for <%= @user.email %></h1>
<hr>
<% @user.pets.each do |pet| %>
  <p>
    <%= image_tag pet.pet_avatar_url(:thumbnail) %>
    <strong><%= link_to pet.name, user_pet_path(@user, pet) %></strong>
    (<%= pet.breed %>)
  </p>
<% end %>

<hr>
<%= link_to "add a pet", new_user_pet_path(@user) %>
<%= link_to "view owner page", user_path(@user) %>
