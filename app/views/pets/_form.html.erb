<%= form_for [@user, @pet]  do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :gender, class: "form-control", placeholder: "Gender" %>
  </div>
  <div class="form-group">
    <%= f.text_field :breed, class: "form-control", placeholder: "Breed" %>
  </div>
  <div class="form-group">
    <%= f.text_field :weight, class: "form-control", placeholder: "Weight" %>
  </div>
  <div class="form-group">
    <%= f.text_area :bio, class: "form-control", placeholder: "Bio" %>
  </div>
  <div class="form-group">
    <%= f.file_field :pet_avatar, class: "form-control", placeholder: "Avatar" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Pet", class: "btn btn-block btn-success" %>
  </div>
<% end %>
