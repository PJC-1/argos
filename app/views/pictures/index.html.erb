<header class="banner">
	<h1><%= @pet.name %>'s Pictures</h1>
</header>
<br>

<div class="transitions-enabled" id="pets">
	<% @pictures.each do |picture| %>
		<% if picture.pet_id == @pet.id %>
	    <div class="box panel panel-default">
	      <%= link_to cl_image_tag(picture.photo_url(:display)), "/pets/#{picture.pet_id}/pictures/#{picture.id}" %>
	      <div class="panel-body">
	      	<strong>Title: </strong><%= picture.title %><br>
	      </div>
	    </div>
		<% end %>
  <% end %>
</div>

<%= will_paginate @pictures %>
