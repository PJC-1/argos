<header class="banner">
	<h1>Login</h1>
</header>
<br>
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
        <h2 class="page-header text-center">Login Info</h2>

        <%= form_for @user, url: login_path, as: 'user' do |f| %>
          <p>
            NOTE* if you just want to browse Argos and see what it's all about, feel free to sign in as the <i><strong>GUEST</strong></i> user (simply press the "Sign In" button below).
          </p>

          <div class="form-group form-control">
            <%= f.text_field :email, placeholder: "Email", :value => "guestuser@gmail.com" %>
          </div>


          <div class="form-group form-control">
            <%= f.password_field :password, placeholder: "Password", :value => "password" %>
          </div>

          <div class="form-actions">
            <%= f.submit "Sign In", class:"btn btn-default btn-lg btn-block" %>
          </div>

        <% end %>
        <br>
        <br>
      </div>
    </div>
  </div>
</div>
