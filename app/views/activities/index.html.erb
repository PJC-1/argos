<h1>Friend's Activities</h1>
<% @activities.each do |activity| %>
  <div class="activity">
    <%= link_to cl_image_tag(activity.owner.avatar_url(:thumbnail)), activity.owner if activity.owner %>
    <%= link_to activity.owner.first_name, activity.owner if activity.owner %>

    <div class="rendered"><%= render_activity activity %></div>
  </div>
<% end %>
<br>
<hr>
<br><%= link_to "back to profile", user_path(current_user)%>
