
  <% if current_user.id == @user.id%>
    <%= button_to "Delete Profile", destroy_user_path(@user),data: {:confirm=>'Are you sure you want to delete your profile?'}, :method => 'delete', class: "btn btn-small btn-danger" %>
  <% else %>
    <%= form_tag unfollow_path(user_id: user.id), method: :post, remote: true do %>
      <%= button_tag 'unfollow', class: 'btn btn-primary click' %>
    <% end %>
    <%= form_tag follow_path(user_id: user.id), method: :post, remote: true do %>
      <%= button_tag 'follow', class: 'btn btn-success click' %>
    <% end %>
  <% end %>
