<header class="banner">
	<h1>Sign Up</h1>
</header>
<br>
<div class="container" id="signupform">
       <div class="row centered-form">
           <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
               <div class="panel panel-default">
                   <div class="panel-heading">
                       <h3 class="panel-title text-center">Please Register</h3>
                   </div>
                   <div class="panel-body">
                       <%= form_for @user do |f| %>
                           <div class="form-group">
                               <%= f.text_field :first_name, id:"first_name", class:"form-control input-sm", placeholder:"First Name" %>
                           </div>

                           <div class="form-group">
                               <%= f.text_field :last_name, id:"last_name", class:"form-control input-sm", placeholder:"Last Name" %>
                           </div>

                           <div class="form-group">
                               <%= f.text_field :email, id:"email", class:"form-control input-sm", placeholder:"Email Address" %>
                           </div>

                           <div class="row">
                               <div class="col-xs-6 col-sm-6 col-md-6">
                                   <div class="form-group">
                                       <%= f.password_field :password, id:"password", class:"form-control input-sm", placeholder:"Password" %>
                                   </div>
                               </div>
                               <div class="col-xs-6 col-sm-6 col-md-6">
                                   <div class="form-group">
                                       <%= f.password_field :password_confirmation, id:"password_confirmation", class:"form-control input-sm", placeholder:"Confirm Password" %>
                                   </div>
                               </div>
                           </div>

                           <%= f.submit "Sign Up", class:"btn btn-info btn-block" %>
                       <% end %>
               </div>
           </div>
       </div>
   </div>
</div>
